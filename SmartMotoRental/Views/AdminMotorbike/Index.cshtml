@model IEnumerable<SmartMotoRental.Models.Motorbike>

@{
    ViewData["Title"] = "Quản lý xe";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col">
            <h2><i class="fas fa-motorcycle"></i> Quản lý xe</h2>
        </div>
        <div class="col text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm xe mới
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Hình ảnh</th>
                            <th>Tên xe</th>
                            <th>Hãng/Dòng</th>
                            <th>Biển số</th>
                            <th>Giá/giờ</th>
                            <th>Giá/ngày</th>
                            <th>Tình trạng</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.Name" 
                                             class="img-thumbnail" style="width: 80px; height: 60px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <img src="/images/no-image.png" alt="No image" 
                                             class="img-thumbnail" style="width: 80px; height: 60px; object-fit: cover;">
                                    }
                                </td>
                                <td>
                                    <strong>@item.Name</strong>
                                    @if (item.Year.HasValue)
                                    {
                                        <br/><small class="text-muted">Năm: @item.Year</small>
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.Brand))
                                    {
                                        <span>@item.Brand</span>
                                    }
                                    @if (!string.IsNullOrEmpty(item.Type))
                                    {
                                        <br/><small class="text-muted">@item.Type</small>
                                    }
                                </td>
                                <td><strong>@item.PlateNumber</strong></td>
                                <td>
                                    @if (item.PricePerHour.HasValue)
                                    {
                                        <span>@item.PricePerHour.Value.ToString("N0") VNĐ</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.PricePerDay.HasValue)
                                    {
                                        <span>@item.PricePerDay.Value.ToString("N0") VNĐ</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    <select class="form-select form-select-sm condition-select" 
                                            data-id="@item.BikeId" 
                                            style="width: 110px;">
                                        <option value="New" selected="@(item.Condition == MotorbikeCondition.New)">Mới</option>
                                        <option value="Good" selected="@(item.Condition == MotorbikeCondition.Good)">Tốt</option>
                                        <option value="Fair" selected="@(item.Condition == MotorbikeCondition.Fair)">Khá</option>
                                        <option value="Poor" selected="@(item.Condition == MotorbikeCondition.Poor)">Kém</option>
                                    </select>
                                </td>
                                <td>
                                    <select class="form-select form-select-sm status-select" 
                                            data-id="@item.BikeId" 
                                            style="width: 130px;">
                                        <option value="Available" selected="@(item.Status == MotorbikeStatus.Available)">Sẵn sàng</option>
                                        <option value="Rented" selected="@(item.Status == MotorbikeStatus.Rented)">Đang thuê</option>
                                        <option value="Maintenance" selected="@(item.Status == MotorbikeStatus.Maintenance)">Bảo trì</option>
                                        <option value="Unavailable" selected="@(item.Status == MotorbikeStatus.Unavailable)">Không khả dụng</option>
                                    </select>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.BikeId" 
                                           class="btn btn-sm btn-warning" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.BikeId" 
                                           class="btn btn-sm btn-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                @if (!Model.Any())
                {
                    <div class="text-center py-5">
                        <i class="fas fa-motorcycle fa-3x text-muted mb-3"></i>
                        <p class="text-muted">Chưa có xe nào trong hệ thống</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Cập nhật trạng thái
            $('.status-select').change(function() {
                var bikeId = $(this).data('id');
                var newStatus = $(this).val();
                
                $.ajax({
                    url: '@Url.Action("UpdateStatus", "AdminMotorbike")',
                    type: 'POST',
                    data: {
                        id: bikeId,
                        status: newStatus
                    },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            toastr.success(response.message);
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function() {
                        toastr.error('Có lỗi xảy ra khi cập nhật trạng thái');
                    }
                });
            });

            // Cập nhật tình trạng
            $('.condition-select').change(function() {
                var bikeId = $(this).data('id');
                var newCondition = $(this).val();
                
                $.ajax({
                    url: '@Url.Action("UpdateCondition", "AdminMotorbike")',
                    type: 'POST',
                    data: {
                        id: bikeId,
                        condition: newCondition
                    },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            toastr.success(response.message);
                        } else {
                            toastr.error(response.message);
                        }
                    },
                    error: function() {
                        toastr.error('Có lỗi xảy ra khi cập nhật tình trạng');
                    }
                });
            });
        });
    </script>
}