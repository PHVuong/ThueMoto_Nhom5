<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SmartMotoRental</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SmartMotoRental.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Top Header Bar -->
        <div class="top-header text-white py-2" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="d-flex align-items-center gap-4">
                            <span>
                                <i class="bi bi-telephone me-2"></i>Hotline: 1900 1234
                            </span>
                            <span class="vr text-white-50"></span>
                            <span>
                                <i class="bi bi-envelope me-2"></i>Email: support@smartmotorental.com
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Navigation Bar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow">
            <div class="container-fluid">
                <!-- Logo -->
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shop fs-3 me-2" style="color: #667eea;"></i>
                    <span class="fw-bold fs-4" style="color: #667eea;">SmartMotoRental</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent"
                        aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">
                    <!-- Search Bar -->
                    <form class="d-flex mx-auto my-3 my-lg-0" style="max-width: 500px; width: 100%;" asp-controller="Motorbike" asp-action="Index" method="get">
                        <input class="form-control me-2 rounded-pill" type="search" name="search" placeholder="Tìm kiếm xe máy..." aria-label="Search">
                        <button class="btn btn-primary rounded-pill" type="submit">
                            <i class="bi bi-search"></i>
                        </button>
                    </form>

                    <!-- Navigation Links -->
                    <ul class="navbar-nav ms-auto align-items-center">
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-link-vertical" asp-controller="Home" asp-action="Index">
                                <div class="nav-icon-wrapper">
                                    <i class="bi bi-house-door"></i>
                                </div>
                                <span class="nav-text">Trang chủ</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-link-vertical" asp-controller="Motorbike" asp-action="Index">
                                <div class="nav-icon-wrapper">
                                    <i class="bi bi-grid"></i>
                                </div>
                                <span class="nav-text">Danh sách xe</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-link-vertical position-relative" asp-controller="DatThueXe" asp-action="Index">
                                <div class="nav-icon-wrapper position-relative">
                                    <i class="bi bi-cart"></i>
                                    <span class="badge rounded-pill position-absolute top-0 start-100 translate-middle" style="background: #0d6efd; font-size: 0.65rem; padding: 0.15rem 0.35rem; min-width: 18px;">0</span>
                                </div>
                                <span class="nav-text">Đặt thuê xe</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark nav-link-vertical" asp-controller="Home" asp-action="Privacy">
                                <div class="nav-icon-wrapper">
                                    <i class="bi bi-info-circle"></i>
                                </div>
                                <span class="nav-text">Giới thiệu</span>
                            </a>
                        </li>
                        @{
                            var userId = Context.Session.GetInt32("UserId");
                            var userName = Context.Session.GetString("UserName");
                            var userRole = Context.Session.GetInt32("UserRole");
                        }
                        
                        @if (userId == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark nav-link-vertical" asp-controller="Account" asp-action="Login">
                                    <div class="nav-icon-wrapper">
                                        <i class="bi bi-box-arrow-in-right"></i>
                                    </div>
                                    <span class="nav-text">Đăng nhập</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark nav-link-vertical" asp-controller="Account" asp-action="Register">
                                    <div class="nav-icon-wrapper">
                                        <i class="bi bi-person-plus"></i>
                                    </div>
                                    <span class="nav-text">Đăng ký</span>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark nav-link-vertical" asp-controller="MyRentals" asp-action="Index">
                                    <div class="nav-icon-wrapper position-relative">
                                        <i class="bi bi-receipt"></i>
                                    </div>
                                    <span class="nav-text">Đơn của tôi</span>
                                </a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link text-dark nav-link-vertical dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <div class="nav-icon-wrapper">
                                        <i class="bi bi-person-circle"></i>
                                    </div>
                                    <span class="nav-text">@(userName ?? "Tài khoản")</span>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-sm" aria-labelledby="userDropdown" style="min-width: 220px; border-radius: 10px; border: none;">
                                    <li class="px-3 py-2">
                                        <small class="text-muted">Xin chào,</small>
                                        <div class="fw-bold">@(userName ?? "User")</div>
                                    </li>
                                    <li><hr class="dropdown-divider my-1"></li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="MyRentals" asp-action="Index">
                                            <i class="bi bi-receipt me-2 text-primary"></i>Đơn thuê của tôi
                                        </a>
                                    </li>
                                    @if (userRole == 1 || userRole == 2) // Admin or Staff
                                    {
                                        <li><hr class="dropdown-divider my-1"></li>
                                        <li>
                                            <a class="dropdown-item py-2" asp-controller="Admin" asp-action="Index">
                                                <i class="bi bi-speedometer2 me-2 text-primary"></i>Dashboard
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item py-2" asp-controller="AdminMotorbike" asp-action="Index">
                                                <i class="bi bi-bicycle me-2 text-primary"></i>Quản lý xe máy
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item py-2" asp-controller="AdminRental" asp-action="Index">
                                                <i class="bi bi-receipt me-2 text-primary"></i>Quản lý đơn thuê
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item py-2" asp-controller="AdminUsers" asp-action="Index">
                                                <i class="bi bi-people me-2 text-primary"></i>Quản lý người dùng
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item py-2" asp-controller="Statistics" asp-action="Index">
                                                <i class="bi bi-bar-chart me-2 text-primary"></i>Thống kê
                                            </a>
                                        </li>
                                    }
                                    <li><hr class="dropdown-divider my-1"></li>
                                    <li>
                                        <a class="dropdown-item py-2" asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2 text-danger"></i>Đăng xuất
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="main-wrapper">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-white">
        <div class="container py-5">
            <div class="row g-4">
                <!-- Cột 1: Thông tin liên hệ -->
                <div class="col-lg-4 col-md-6">
                    <h4 class="mb-4 fw-bold">SMARTMOTORENTAL</h4>
                    <p class="mb-3">
                        <i class="bi bi-geo-alt me-2"></i>Địa chỉ: 254 Nguyễn Văn Linh, TP. Đà Nẵng
                    </p>
                    <p class="mb-3">
                        <i class="bi bi-clock me-2"></i>Giờ mở cửa: 07:30 - 19:30
                    </p>
                    <p class="mb-3">
                        <i class="bi bi-envelope me-2"></i>Email: support@smartmotorental.com
                    </p>
                    <p class="mb-0">
                        <i class="bi bi-telephone me-2"></i>Điện thoại: 1900 1234
                    </p>
                </div>

                <!-- Cột 2: Menu -->
                <div class="col-lg-4 col-md-6">
                    <h5 class="mb-4 fw-bold">Menu</h5>
                    <ul class="list-unstyled footer-menu">
                        <li class="mb-2">
                            <a href="#" class="text-white-50 d-flex align-items-center">
                                <i class="bi bi-chevron-right me-2"></i>Thuê xe máy
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Home" asp-action="Index" class="text-white-50 d-flex align-items-center">
                                <i class="bi bi-chevron-right me-2"></i>Trang chủ
                            </a>
                        </li>
                        <li class="mb-2">
                            <a asp-controller="Motorbike" asp-action="Index" class="text-white-50 d-flex align-items-center">
                                <i class="bi bi-chevron-right me-2"></i>Danh sách xe
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Cột 3: Form liên hệ -->
                <div class="col-lg-4 col-md-12">
                    <h5 class="mb-4 fw-bold">Liên hệ tư vấn</h5>
                    <form asp-controller="Home" asp-action="Contact" method="post" class="contact-form" id="contactForm">
                        @Html.AntiForgeryToken()
                        <div class="mb-3">
                            <input type="text" name="name" class="form-control form-control-sm" placeholder="Tên" required>
                        </div>
                        <div class="mb-3">
                            <input type="email" name="email" class="form-control form-control-sm" placeholder="Email" required>
                        </div>
                        <div class="mb-3">
                            <input type="tel" name="phone" class="form-control form-control-sm" placeholder="Tel" required>
                        </div>
                        <div class="mb-3">
                            <textarea name="message" class="form-control form-control-sm" rows="3" placeholder="Nội dung" required></textarea>
                        </div>
                        <button type="submit" class="btn btn-light btn-sm w-100 fw-bold">
                            Gửi <i class="bi bi-arrow-right ms-1"></i>
                        </button>
                    </form>
                </div>
            </div>
        </div>
        
        <!-- Footer Bottom -->
        <div class="footer-bottom">
        <div class="container">
                <hr class="my-0" style="border-color: rgba(255,255,255,0.2);">
                <div class="d-flex justify-content-between align-items-center py-3 flex-wrap">
                    <p class="mb-0">© SMARTMOTORENTAL</p>
                    <div class="social-icons">
                        <a href="#" class="social-icon" title="Twitter">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="#" class="social-icon" title="Facebook">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="social-icon" title="Instagram">
                            <i class="bi bi-instagram"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    
    <!-- Contact Form Script -->
    <script>
        // Hiển thị thông báo từ TempData
        $(document).ready(function() {
            @if (TempData["ContactSuccess"] != null)
            {
                <text>
                alert('@TempData["ContactSuccess"]');
                </text>
            }
            @if (TempData["ContactError"] != null)
            {
                <text>
                alert('@TempData["ContactError"]');
                </text>
            }
            
            // Reset form sau khi submit thành công
            @if (TempData["ContactSuccess"] != null)
            {
                <text>
                document.getElementById('contactForm').reset();
                </text>
            }
        });
    </script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

