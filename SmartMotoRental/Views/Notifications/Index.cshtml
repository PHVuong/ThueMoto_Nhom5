    }

    .notify-item {
        padding: 15px;
        border-radius: 12px;
        background: #f5f5f5;
        margin-bottom: 12px;
        cursor: pointer;
        transition: .2s;
    }

    .notify-item:hover {
        background: #e9e9e9;
    }

    .notify-delete {
        color: red;
        font-size: 12px;
        cursor: pointer;
        float: right;
    }
</style>

