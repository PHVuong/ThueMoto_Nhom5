@{
    ViewData["Title"] = "Thống kê";
}

<h2 class="mt-3">Thống kê hệ thống</h2>

<div class="row">
    <div class="col-md-6">
        <h4>Người dùng theo vai trò</h4>
        <canvas id="usersRoleChart"></canvas>
    </div>
    <div class="col-md-6">
        <h4>Người dùng theo tháng (6 tháng gần nhất)</h4>
        <canvas id="usersMonthChart"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        fetch('@Url.Action("UsersPerRole","Statistics")')
            .then(r => r.json())
            .then(data => {
                const labels = data.map(x => x.role || x.Role);
                const counts = data.map(x => x.count || x.Count);
                const ctx = document.getElementById('usersRoleChart').getContext('2d');
                new Chart(ctx, {
                    type: 'pie',
                    data: {
                        labels: labels,
                        datasets: [{
                            data: counts
                        }]
                    }
                });
            });

        fetch('@Url.Action("UsersPerMonth","Statistics")')
            .then(r => r.json())
            .then(data => {
                const labels = data.map(x => x.label);
                const counts = data.map(x => x.count);
                const ctx2 = document.getElementById('usersMonthChart').getContext('2d');
                new Chart(ctx2, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Người dùng mới',
                            data: counts,
                        }]
                    },
                    options: {
                        scales: {
                            y: { beginAtZero: true }
                        }
                    }
                });
            });
    </script>
}