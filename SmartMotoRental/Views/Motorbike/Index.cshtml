@model IEnumerable<SmartMotoRental.Models.Motorbike>
@{
    ViewData["Title"] = "Danh sách xe cho thuê";
}
<div>
    <h1>Danh sách xe máy</h1>
    @if(Model == null || !Model.Any())
    {
        <p class="alert alert-info">Hiện chưa có xe máy nào!!</p>
    }
    else
    {
        <div class="row">
            @foreach(var bike in Model)
            {
                <div class="col-md-4">
                    <div class="card h-100">
                        <img src="@bike.ImageUrl" alt="@bike.Name" style="height: 250px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@bike.Name</h5>
                            <p class="card-text">
                                <strong>Loại:</strong> @bike.Type<br>
                                <strong>Hãng:</strong> @bike.Brand<br>
                                <strong>Năm:</strong> @bike.Year<br>
                                <strong>Vị trí:</strong> @bike.Location<br>
                            </p>
                            <p class="card-text">
                                <strong>Giá:</strong> 
                                @if (bike.PricePerHour.HasValue)
                                {
                                    <span>@bike.PricePerHour.Value.ToString("N0") VNĐ/giờ</span>
                                }
                                @if (bike.PricePerDay.HasValue)
                                {
                                    <span> - @bike.PricePerDay.Value.ToString("N0") VNĐ/ngày</span>
                                }
                            </p>
                            <a href="@Url.Action("Details", "Motorbike", new { id = bike.BikeId })" class="btn btn-primary">Xem chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>