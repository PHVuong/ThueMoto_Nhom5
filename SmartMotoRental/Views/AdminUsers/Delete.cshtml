@model SmartMotoRental.Models.User
@{
    ViewData["Title"] = "Xóa người dùng";
}

<h2>Xóa người dùng</h2>

<div>
    <h4>Bạn có chắc muốn xóa người dùng này?</h4>
    <dl class="row">
        <dt class="col-sm-2">Họ tên</dt><dd class="col-sm-10">@Model.FullName</dd>
        <dt class="col-sm-2">Email</dt><dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Số điện thoại</dt><dd class="col-sm-10">@Model.Phone</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="UserId" />
        <button type="submit" class="btn btn-danger">Xóa</button>
        <a class="btn btn-secondary" asp-action="Index">Hủy</a>
    </form>
</div>