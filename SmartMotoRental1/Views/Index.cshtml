@model List<SmartMotoRental.Models.RentalOrderViewModel>
@{
    ViewData["Title"] = "Quản Lý Đơn Thuê";
    var statuses = ViewBag.Statuses as List<string>;
}

<h2>Quản lý đơn thuê</h2>

<form asp-controller="RentalOrders" asp-action="Index" method="get" class="row mb-4 align-items-end">
    <div class="col-md-6">
        <input type="text" name="searchTerm" class="form-control" placeholder="Tìm kiếm theo khách hoặc mã đơn..." 
               value="@ViewData["CurrentSearch"]" />
    </div>

    <div class="col-md-4">
        <select name="statusFilter" class="form-select" onchange="this.form.submit()">
            <option value="">Tất cả trạng thái</option>
            @if (statuses != null)
            {
                @foreach (var status in statuses)
                {
                    <option value="@status" selected="@(ViewData["CurrentStatus"]?.ToString() == status)">
                        @status
                    </option>
                }
            }
        </select>
    </div>
    
    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Lọc</button>
    </div>
</form>

<table class="table table-striped table-hover">
    <thead>
        <tr class="table-dark">
            <th>Mã đơn</th>
            <th>Khách hàng</th>
            <th>Xe</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.CustomerName</td>
                <td>@order.VehicleName</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-info">Xem</a>

                    @if (order.CanBeRented)
                    {
                        <form asp-controller="RentalOrders" asp-action="ChangeStatus" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@order.OrderId" />
                            <input type="hidden" name="newStatus" value="Rented" />
                            <button type="submit" class="btn btn-sm btn-success">Nhận xe</button>
                        </form>
                    }
                    
                    @if (order.CanBeCancelled)
                    {
                        <form asp-controller="RentalOrders" asp-action="ChangeStatus" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@order.OrderId" />
                            <input type="hidden" name="newStatus" value="Cancelled" />
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Xác nhận hủy đơn hàng?');">Hủy</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>